# ==============================================
# BORA UI - Variáveis de Ambiente
# ==============================================

# ----------------------------------------------
# DATABASE (Supabase PostgreSQL)
# ----------------------------------------------
# Connection string com pgbouncer para conexões pooled
DATABASE_URL="postgresql://user:password@host:5432/database?pgbouncer=true"
# Connection string direta (sem pgbouncer) para migrations
DIRECT_URL="postgresql://user:password@host:5432/database"

# ----------------------------------------------
# NEXTAUTH (Autenticação)
# ----------------------------------------------
# Gere com: openssl rand -base64 32
NEXTAUTH_SECRET="sua-secret-key-super-secreta-aqui"
# URL da aplicação PWA
NEXTAUTH_URL="http://localhost:3000"

# ----------------------------------------------
# NEXTAUTH v5 (Admin - se usar v5)
# ----------------------------------------------
# Gere com: openssl rand -base64 32
AUTH_SECRET="sua-secret-key-super-secreta-aqui"
# URL da aplicação Admin
AUTH_URL="http://localhost:3002"

# ----------------------------------------------
# GOOGLE OAUTH
# ----------------------------------------------
# Obter em: https://console.cloud.google.com/apis/credentials
# 1. Criar projeto no Google Cloud Console
# 2. Ativar Google+ API
# 3. Criar credenciais OAuth 2.0
# 4. Adicionar URIs autorizadas:
#    - http://localhost:3000
#    - http://localhost:3000/api/auth/callback/google
GOOGLE_CLIENT_ID="seu-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="seu-client-secret"

# ----------------------------------------------
# GOOGLE MAPS API
# ----------------------------------------------
# Obter em: https://console.cloud.google.com/google/maps-apis
# 1. Ativar Maps JavaScript API
# 2. Ativar Places API
# 3. Criar credencial de API Key
# 4. Restringir por domínio (localhost:3000)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="AIzaSy..."

# ----------------------------------------------
# PUSHER (Chat em Tempo Real)
# ----------------------------------------------
# Obter em: https://dashboard.pusher.com/
# 1. Criar conta gratuita
# 2. Criar novo app
# 3. Copiar credenciais
NEXT_PUBLIC_PUSHER_KEY="sua-pusher-key"
NEXT_PUBLIC_PUSHER_CLUSTER="us2"
PUSHER_APP_ID="seu-app-id"
PUSHER_SECRET="seu-pusher-secret"

# ----------------------------------------------
# MERCADO PAGO (Pagamentos)
# ----------------------------------------------
# Obter em: https://www.mercadopago.com.br/developers/panel/app
# 1. Criar aplicação
# 2. Copiar Access Token (usar TEST para desenvolvimento)
# Sandbox: TEST-...
# Produção: APP_USR-...
MERCADOPAGO_ACCESS_TOKEN="TEST-1234567890-123456-abcdef1234567890abcdef1234567890-123456789"

# ----------------------------------------------
# SUPABASE (Storage de Arquivos)
# ----------------------------------------------
# Obter em: https://app.supabase.com/project/_/settings/api
# 1. Criar projeto
# 2. Ir em Settings > API
# 3. Copiar URL e anon key
NEXT_PUBLIC_SUPABASE_URL="https://seu-projeto.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# ----------------------------------------------
# VERCEL BLOB (Upload de Imagens)
# ----------------------------------------------
# Obter em: https://vercel.com/dashboard/stores
# 1. Criar Blob Store
# 2. Copiar token
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# ----------------------------------------------
# APP CONFIG
# ----------------------------------------------
# URL base da aplicação
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Ambiente (development, production, test)
NODE_ENV="development"

# ----------------------------------------------
# OPCIONAL - CONFIGURAÇÕES AVANÇADAS
# ----------------------------------------------

# Comissão da plataforma (em porcentagem)
PLATFORM_FEE_PERCENTAGE="10"

# Tempo de expiração do Pix (em minutos)
PIX_EXPIRATION_MINUTES="30"

# Tempo para instrutor aceitar aula (em minutos)
LESSON_ACCEPTANCE_TIMEOUT_MINUTES="2"

# Raio padrão de busca (em km)
DEFAULT_SEARCH_RADIUS_KM="50"

